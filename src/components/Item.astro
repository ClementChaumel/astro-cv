---
export interface Props {
  title: string;
  date: string;
  job: string;
  location: string;
  achievements: string[];
}

const { title, date, job, location, achievements } = Astro.props;
---

<div>
  <h3 class="text-primary text-xl font-cursive mb-2">
    {title}
    {date}
  </h3>
  <h4 class="text-muted text-opacity-70 font-cursive mb-3">
    {job} - {location}
  </h4>
  <ul>
    {
      achievements.map((achievement) => (
        <li class="flex gap-2 mb-2">
          <img
            class="disc w-3 h-3 mt-2"
            src="/assets/sphere-dynamic-color-small.png"
            alt=""
          />{" "}
          <p>{achievement}</p>
        </li>
      ))
    }
  </ul>
  <style></style>
</div>

<style>
  .disc {
    filter: hue-rotate(calc(var(--accent-hue) + 10deg))
      drop-shadow(2px 2px 3px rgba(0, 0, 0, 0.25));
  }
</style>
