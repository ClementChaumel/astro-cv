---
import Layout from "../layouts/Layout.astro";
import Intro from "../components/Intro.astro";
import Experience from "../components/Experience.astro";
import Skills from "../components/Skills.astro";
import Hero from "../components/Hero.astro";
import DarkThemeButton from "../components/DarkThemeButton.astro";
---

<Layout title="🌥️ CV Clément Chaumel 🌥️">
  <main
    class="text-black p-0 mx-auto max-w-prose overflow-hidden sm:my-5 sm:rounded-lg sm:shadow-2xl font-sans"
  >
    <Hero />

    <div
      class="relative bg-page pt-12 px-5 flex flex-col gap-10 pb-10 z-30 transition-colors"
    >
      <Intro />

      <Skills />

      <Experience />

      <p class="font-black px-5">
        I also went to school and have a Master's degree in software development
        from the fantastic Université Paul Sabatier! 🧑‍🎓
      </p>
    </div>

    <DarkThemeButton />
  </main>
</Layout>
