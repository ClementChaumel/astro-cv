    <style>
      :root {
        --drop-shadow-l: drop-shadow(20px 10px 2.75rem rgba(0, 0, 0, 0.2));
      }

      @keyframes wobble {
        0% {
          transform: scale(0.3) rotate(51deg);
        }
        25% {
          transform: scale(0.3) rotate(56deg);
        }
        50% {
        }
        75% {
          transform: scale(0.3) rotate(43deg);
        }
        100% {
          transform: scale(0.3) rotate(51deg);
        }
      }

      @keyframes disappear {
        0% {
          transform: scale(0.3) rotate(51deg) translate(0);
        }
        50% {
          transform: scale(0.3) rotate(51deg) translate(-150px, -150px);
          z-index: 0;
        }
        100% {
          transform: scale(0.3) rotate(51deg) translate(250px, 250px);
          z-index: 0;
        }
      }

      .cloud {
        top: -97px;
        transform: scale(0.3) rotate(51deg);
        filter: brightness(1.2) var(--drop-shadow-l);
        left: -264px;
        z-index: 99;
        animation: 8s linear infinite wobble;
      }
      .sun {
        top: -270px;
        transform: scale(0.45) rotate(51deg);
        filter: brightness(1.2) var(--drop-shadow-l);
        left: 264px;
        transition: transform 1s ease-in-out;
      }
      .sun:hover {
        transform: scale(0.5) rotate(48deg);
      }
